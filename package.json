{
  "name": "juristap-landing",
  "type": "module",
  "version": "0.0.2",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "commit": "cz",
    "release": "standard-version",
    "format": "biome format --write . && prettier --write \"src/**/*.astro\"",
    "format:check": "prettier --check \"src/**/*.astro\"",
    "lint": "biome lint .",
    "check": "biome check --apply ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "astro": "^5.7.11",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/bun": "^1.2.12",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "standard-version": "^9.5.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
