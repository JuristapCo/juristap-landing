---
import { Image } from 'astro:assets';
import Logo from '../assets/images/brand/logo-white.webp';
---

<footer class="bg-primary-500 text-white py-8 md:py-12 relative overflow-hidden">
  <!-- Subtle background pattern with radial gradient -->
  <div class="absolute inset-0 bg-primary-900/20 opacity-20 pointer-events-none">
    <div class="absolute inset-0 bg-[radial-gradient(circle,_transparent_20%,_#000_70%)] opacity-5">
    </div>
  </div>

  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <!-- Mobile: logo first, Desktop: 3 aligned columns -->
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-center gap-6 md:gap-8"
    >
      <!-- Centered logo with hover effect - First on mobile -->
      <div
        class="flex flex-col w-full md:w-1/3 items-center justify-center order-1 md:order-2 mb-6 md:mb-0"
      >
        <a href="/" class="transform hover:scale-105 transition-transform duration-300">
          <Image
            src={Logo}
            alt="Juristap Logo"
            class="w-36 md:w-44 h-auto drop-shadow-lg"
            style="image-rendering: high-quality; -webkit-font-smoothing: antialiased;"
            draggable="false"
          />
        </a>
        <div class="mt-3 relative">
          <span
            class="text-xs md:text-sm font-medium tracking-wider uppercase bg-gradient-to-r from-primary-300 via-purple-400 to-primary-300 bg-clip-text text-transparent animate-pulse"
          >
            Próximamente
          </span>
          <div
            class="absolute -bottom-1 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary-400 to-transparent"
          >
          </div>
        </div>
      </div>

      <!-- Site navigation links -->
      <div
        class="flex flex-col gap-3 w-full md:w-1/3 items-center md:items-start text-center md:text-left order-2 md:order-1"
      >
        <a href="/soy-abogado" class="hover:text-secondary transition-colors duration-300 py-1.5">
          <span class="relative overflow-hidden group"> Soy abogado </span>
        </a>
        <a href="/soy-cliente" class="hover:text-secondary transition-colors duration-300 py-1.5">
          <span class="relative overflow-hidden group"> Soy cliente </span>
        </a>
        <a
          href="/sobre-nosotros"
          class="hover:text-secondary transition-colors duration-300 py-1.5"
        >
          <span class="relative overflow-hidden group"> Contáctenos </span>
        </a>
      </div>

      <!-- Social media links with icons -->
      <div
        class="flex flex-col w-full md:w-1/3 items-center md:items-end text-center md:text-right order-3 mt-4 md:mt-0"
      >
        <h3 class="font-medium text-primary-50 mb-3 uppercase tracking-wider text-sm">
          Encuéntranos en
        </h3>
        <div class="flex flex-row md:flex-col gap-4">
          <a
            href="https://facebook.com/juristap_"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 md:gap-3 hover:text-primary-100 transition-all duration-300 group"
          >
            <span
              class="bg-primary-800/30 p-2 rounded-full group-hover:bg-primary-700/40 transition-colors duration-300"
            >
              <svg class="w-5 h-5 fill-current">
                <use href="/icons/social-sprites.svg#icon-facebook"></use>
              </svg>
            </span>
            <span class="hidden md:inline">juristap_</span>
          </a>
          <a
            href="https://instagram.com/juristap_"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-2 md:gap-3 hover:text-primary-100 transition-all duration-300 group"
          >
            <span
              class="bg-primary-800/30 p-2 rounded-full group-hover:bg-primary-700/40 transition-colors duration-300"
            >
              <svg class="w-5 h-5 fill-current">
                <use href="/icons/social-sprites.svg#icon-instagram"></use>
              </svg>
            </span>
            <span class="hidden md:inline">juristap_</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright section with dynamic year -->
    <div
      class="mt-8 md:mt-12 pt-4 md:pt-6 border-t border-white/10 text-center text-xs md:text-sm text-white/70"
    >
      <p>
        © {new Date().getFullYear()}
        <span class="text-primary-100">Juristap</span>. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
