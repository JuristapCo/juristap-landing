        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
  /* Character container with entrance animation */
  .character-container {
    transform: translateY(20px);
    opacity: 0;
    animation: float-in 1s ease forwards;
  }

  @keyframes float-in {
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Main character floating animation */
  .character-svg {
    animation: floating 6s ease-in-out infinite;
  }

  @keyframes floating {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(1deg);
    }
  }

  /* Head movement */
  .character-head {
    transform-origin: center;
    animation: head-bob 4s ease-in-out infinite;
  }

  @keyframes head-bob {
    0%,
    100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(1deg);
    }
    75% {
      transform: rotate(-1deg);
    }
  }

  /* Body movement */
  .character-body {
    animation: body-sway 8s ease-in-out infinite;
  }

  @keyframes body-sway {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(2px);
    }
  }

  /* Hand animations */
  .hand-left {
    transform-origin: 30% 50%;
    animation: hand-wave-left 3s ease-in-out infinite;
  }

  .hand-right {
    transform-origin: 70% 50%;
    animation: hand-wave-right 3s ease-in-out infinite;
  }

  @keyframes hand-wave-left {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(-5deg);
    }
  }

  @keyframes hand-wave-right {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(5deg);
    }
  }

  /* Eye animations */
  .eye-left {
    animation: blink 4s ease-in-out infinite;
    transform-origin: center;
  }
  .eye-right {
    transform-origin: center;
    animation: blink-right 4s ease-in-out infinite;
  }

  @keyframes blink {
    0%,
    96%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    98% {
      transform: scale(0.95);
      opacity: 0.2;
    }
  }

  @keyframes blink-right {
    0%,
    96%,
    100% {
      transform: rotate(-5deg) scale(1);
      opacity: 1;
    }
    98% {
      transform: rotate(-5deg) scale(0.95);
      opacity: 0.2;
    }
  }

  /* Phone animations */
  .phone-path {
    animation: phone-tilt 5s ease-in-out infinite;
  }

  @keyframes phone-tilt {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(-2deg);
    }
  }

  /* Phone screen glow effect */
  .phone-screen-path {
    animation: screen-glow 3s ease-in-out infinite;
  }

  @keyframes screen-glow {
    0%,
    100% {
      filter: brightness(1);
    }
    50% {
      filter: brightness(1.2);
    }
  }

  /* Legs movement */
  .legs-path {
    animation: legs-sway 6s ease-in-out infinite;
  }

  @keyframes legs-sway {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(2px);
    }
  }

  /* Cloud animations */
  .cloud-left {
    animation: cloud-drift-left 15s ease-in-out infinite;
    transform-origin: center;
  }

  @keyframes cloud-drift-left {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-10px) scale(1.05);
    }
  }

  .cloud-right {
    animation: cloud-drift-right 18s ease-in-out infinite;
    transform-origin: center;
  }

  @keyframes cloud-drift-right {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(10px) scale(1.05);
    }
  }
</style>
