---
import SectionContainer from '../../components/ui/section-container.astro';

// Structured data for the intro section
const introStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: 'Juristap, una plataforma que trabaja para ti',
  description:
    'En este trayecto tendrás un copiloto inteligente que te conecta con quienes necesitan de tu ayuda y además facilita la administración de tus casos.',
  publisher: {
    '@type': 'Organization',
    name: 'Juristap',
    logo: {
      '@type': 'ImageObject',
      url: 'https://juristap.com/logo.png',
    },
  },
};
---

<SectionContainer
  background="bg-white"
  role="region"
  aria-labelledby="intro-heading"
  itemscope
  itemtype="https://schema.org/Article"
>
  <div
    class="flex flex-col md:flex-col lg:flex-row gap-8 lg:gap-16 md:items-center justify-center lg:justify-between mx-auto max-w-7xl px-4 sm:px-6 lg:px-8"
  >
    <!-- Left Column - Main Heading -->
    <div class="lg:w-1/2 space-y-4 text-center lg:text-left">
      <h2
        id="intro-heading"
        class="text-2xl sm:text-2xl md:text-3xl lg:text-4xl text-primary leading-tight"
        itemprop="headline"
      >
        Juristap, una plataforma que <span class="text-primary font-bold">trabaja</span> para ti
      </h2>
    </div>

    <!-- Right Column - Supporting Text -->
    <div class="lg:w-1/2 space-y-3 md:max-w-lg text-center lg:text-left">
      <p class="text-gray-600 text-sm sm:text-base md:text-lg lg:text-xl" itemprop="description">
        En este trayecto tendrás un copiloto inteligente que te conecta con quienes necesitan de tu
        ayuda y además facilita la administración de tus casos.
      </p>
    </div>
  </div>
</SectionContainer>

<script type="application/ld+json" set:html={JSON.stringify(introStructuredData)} />
